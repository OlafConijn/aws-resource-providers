{
    "typeName": "Community::CodeCommit::RepositoryAssociation",
    "description": "Resource that allows for the association of a particular approval rule template to CodeCommit repositories.",
    "sourceUrl": "https://github.com/org-formation/aws-resource-providers.git",
    "definitions": {},
    "properties": {
        "Arn": {
            "type": "string",
            "description": "The Amazon Resource Name (ARN) of the approval rule template repository association.",
            "minLength": 25,
            "maxLength": 256,
            "pattern": "^arn:community:codecommit:[A-Za-z0-9-]{1,64}:[0-9]{12}:repository-association/.+$"
        },
        "ApprovalRuleTemplateName": {
            "type": "string",
            "description": "The name of the approval rule template for which you want to associate the repositories.",
            "minLength": 1,
            "maxLength": 100
        },
        "RepositoryNames": {
            "type": "array",
            "description": "A list of repository names that will be associated with the specified approval rule template.",
            "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100,
                "pattern": "[\\w\\.-]+"
            },
            "minItems": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "ApprovalRuleTemplateName",
        "RepositoryNames"
    ],
    "createOnlyProperties": [
        "/properties/ApprovalRuleTemplateName"
    ],
    "readOnlyProperties": [
        "/properties/Arn"
    ],
    "primaryIdentifier": [
        "/properties/Arn"
    ],
    "additionalIdentifiers": [
        [
            "/properties/ApprovalRuleTemplateName"
        ]
    ],
    "handlers": {
        "create": {
            "permissions": [
                "codecommit:AssociateApprovalRuleTemplateWithRepository",
                "codecommit:BatchAssociateApprovalRuleTemplateWithRepositories",
                "codecommit:ListRepositoriesForApprovalRuleTemplate"
            ]
        },
        "read": {
            "permissions": [
                "codecommit:ListRepositoriesForApprovalRuleTemplate"
            ]
        },
        "update": {
            "permissions": [
                "codecommit:AssociateApprovalRuleTemplateWithRepository",
                "codecommit:BatchAssociateApprovalRuleTemplateWithRepositories",
                "codecommit:BatchDisassociateApprovalRuleTemplateFromRepositories",
                "codecommit:DisassociateApprovalRuleTemplateFromRepository",
                "codecommit:ListRepositoriesForApprovalRuleTemplate"
            ]
        },
        "delete": {
            "permissions": [
                "codecommit:BatchDisassociateApprovalRuleTemplateFromRepositories",
                "codecommit:DisassociateApprovalRuleTemplateFromRepository",
                "codecommit:ListRepositoriesForApprovalRuleTemplate"
            ]
        }
    }   
}
