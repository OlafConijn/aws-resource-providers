{
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "allowJs": true,
        "alwaysStrict": true,
        "strict": false,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@amazon-web-services-cloudformation/cloudformation-cli-typescript-lib": ["./node_modules/cfn-rpdk"]
        }
    },
    "include": [
        "**/src/**/*.ts"
    ],
    "exclude": [
        "**/node_modules"
    ]
}
